# ===== MOBILE FRONTEND DOCKERFILE (DEVELOPMENT) =====
# Runs Expo development server for mobile app testing

FROM node:20-alpine

WORKDIR /app

# Install expo CLI globally
RUN npm install -g @expo/cli expo-cli

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy application code
COPY . .

# Expose Expo ports
# 8081 - Metro bundler
# 19000 - Expo DevTools
# 19001 - Expo DevTools
# 19002 - Expo DevTools
EXPOSE 8081 19000 19001 19002

# Set environment variables for Expo
ENV EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0
ENV REACT_NATIVE_PACKAGER_HOSTNAME=0.0.0.0

# Start Expo development server in tunnel-less mode (LAN)
# The --host lan flag makes it accessible on local network
CMD ["npx", "expo", "start", "--host", "lan", "--port", "8081"]
